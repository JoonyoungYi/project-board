<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:top="0dp"
        android:bottom="0dp"
        android:left="4dp"
        android:right="4dp">
        <shape
            android:shape="rectangle"
            android:dither="true">


            <corners
                android:topLeftRadius="1dp"
                android:topRightRadius="1dp"
                android:bottomLeftRadius="1dp"
                android:bottomRightRadius="1dp" />

            <solid android:color="#CFCFCF" />

        </shape>
    </item>

    <item
        android:top="0dp"
        android:bottom="1dp"
        android:left="0dp"
        android:right="0dp">
        <shape
            android:shape="rectangle"
            android:dither="true">

            <corners
                android:topLeftRadius="1dp"
                android:topRightRadius="1dp"
                android:bottomLeftRadius="1dp"
                android:bottomRightRadius="1dp" />

            <solid android:color="#E6E6E6" />

            <padding
                android:bottom="8dp"
                android:left="8dp"
                android:right="12dp"
                android:top="8dp" />
        </shape>
    </item>
</layer-list>