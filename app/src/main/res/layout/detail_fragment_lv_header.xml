<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:paddingBottom="0dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/writer_img_tv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="16dp"
            android:text="김"
            android:textColor="#FFFFFF"
            android:textSize="25dp"
            android:gravity="center"
            android:background="@drawable/board_writer_img_iv_bg_portal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/writer_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:singleLine="false"
                android:text="김사람"
                android:textColor="#000000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/ts_tv"
                android:layout_marginTop="1sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="1시간 전"
                android:textColor="#888888"
                android:textSize="14sp" />
        </LinearLayout>

    </LinearLayout>


    <TextView
        android:id="@+id/title_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:paddingTop="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingBottom="16dp"
        android:textColor="#3F3F3F"
        android:text="제목 예시" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="#CFCFCF"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp" />

    <TextView
        android:id="@+id/content_tv"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:autoLink="web"
        android:text="컨텐트예시" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingRight="12dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:minWidth="52dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="0dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:layout_marginBottom="1dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="18sp"
                    android:layout_height="18sp"
                    android:scaleType="centerInside"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="2sp"
                    android:src="@drawable/board_hot" />

                <TextView
                    android:id="@+id/read_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:layout_gravity="center_vertical"
                    android:textSize="14sp"
                    android:textColor="#666666" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/plus_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:background="@drawable/board_card_button_bg"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="18sp"
                    android:layout_height="18sp"
                    android:scaleType="centerInside"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="2sp"
                    android:src="@drawable/board_plus" />

                <TextView
                    android:id="@+id/plus_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="13"
                    android:layout_gravity="center_vertical"
                    android:textSize="14sp"
                    android:textColor="#666666" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/minus_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:background="@drawable/board_card_button_bg"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="18sp"
                    android:layout_height="18sp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="2sp"
                    android:scaleType="centerInside"
                    android:src="@drawable/board_minus" />

                <TextView
                    android:id="@+id/minus_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:layout_gravity="center_vertical"
                    android:textSize="14sp"
                    android:textColor="#666666" />

            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/board_card_button_bg"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20sp"
                    android:layout_height="18sp"
                    android:layout_marginLeft="2sp"
                    android:layout_gravity="center_vertical"
                    android:scaleType="centerInside"
                    android:layout_marginRight="4sp"
                    android:padding="1sp"
                    android:src="@drawable/board_comment" />

                <TextView
                    android:id="@+id/comment_cnt_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text=" - "
                    android:textSize="14sp"
                    android:textColor="#666666" />

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

    <View
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/board_card_shadow" />

</LinearLayout>