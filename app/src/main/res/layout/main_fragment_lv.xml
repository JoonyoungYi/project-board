<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/container"
    android:background="@drawable/base_card_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <TextView
            android:id="@+id/writer_img_tv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="16dp"
            android:text="김"
            android:textColor="#FFFFFF"
            android:textSize="25dp"
            android:gravity="center"
            android:background="@drawable/board_writer_img_iv_bg_portal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/writer_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:singleLine="false"
                android:text="김사람"
                android:textColor="#000000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/ts_tv"
                android:layout_marginTop="1sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="1시간 전"
                android:textColor="#888888"
                android:textSize="14sp" />
        </LinearLayout>

    </LinearLayout>


    <TextView
        android:id="@+id/title_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:paddingTop="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingBottom="0dp"
        android:textColor="#3F3F3F"
        android:text="제목 예시" />

    <include
        layout="@layout/board_card_image_container"
        android:id="@+id/image_container_view"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="16dp" />

    <LinearLayout
        android:id="@+id/attachment_view"
        android:layout_width="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:orientation="vertical">

        <View
            android:id="@+id/attachment_divider_view"
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:layout_marginBottom="8dp"
            android:background="@color/board_card_shadow" />

        <LinearLayout
            android:id="@+id/attachment_view_0"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/attachment_iv_0"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="16dp"
                android:src="@drawable/board_file_default"
                android:scaleType="centerInside"
                android:layout_gravity="center_vertical" />

            <TextView
                android:id="@+id/attachment_tv_0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:layout_gravity="center"
                android:text="파일이름입니다.png"
                android:textSize="16sp"
                android:maxLines="1"
                android:ellipsize="middle"
                android:textColor="@color/board_textcolor_strong" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/attachment_view_1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/attachment_iv_1"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="16dp"
                android:src="@drawable/board_file_default"
                android:scaleType="centerInside"
                android:layout_gravity="center_vertical" />

            <TextView
                android:id="@+id/attachment_tv_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:layout_gravity="center"
                android:text="파일이름입니다.png"
                android:textSize="16sp"
                android:maxLines="1"
                android:ellipsize="middle"
                android:textColor="@color/board_textcolor_strong" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/attachment_view_2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/attachment_iv_2"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="16dp"
                android:src="@drawable/board_file_default"
                android:scaleType="centerInside"
                android:layout_gravity="center_vertical" />

            <TextView
                android:id="@+id/attachment_tv_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:layout_gravity="center"
                android:text="3개 더보기"
                android:textSize="16sp"
                android:maxLines="1"
                android:ellipsize="middle"
                android:textColor="@color/board_textcolor_weak" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:paddingTop="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:minWidth="52dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="0dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:layout_marginBottom="1dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="18sp"
                    android:layout_height="18sp"
                    android:scaleType="centerInside"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="2sp"
                    android:src="@drawable/board_hot" />

                <TextView
                    android:id="@+id/read_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:layout_gravity="center_vertical"
                    android:textSize="14sp"
                    android:textColor="#666666" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/plus_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:background="@drawable/board_card_button_bg"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="18sp"
                    android:layout_height="18sp"
                    android:scaleType="centerInside"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="2sp"
                    android:src="@drawable/board_plus" />

                <TextView
                    android:id="@+id/plus_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="13"
                    android:layout_gravity="center_vertical"
                    android:textSize="14sp"
                    android:textColor="#666666" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/minus_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:background="@drawable/board_card_button_bg"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="18sp"
                    android:layout_height="18sp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="2sp"
                    android:scaleType="centerInside"
                    android:src="@drawable/board_minus" />

                <TextView
                    android:id="@+id/minus_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:layout_gravity="center_vertical"
                    android:textSize="14sp"
                    android:textColor="#666666" />

            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <LinearLayout
                android:id="@+id/comment_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/board_card_button_bg"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20sp"
                    android:layout_height="18sp"
                    android:layout_marginLeft="2sp"
                    android:layout_gravity="center_vertical"
                    android:scaleType="centerInside"
                    android:layout_marginRight="4sp"
                    android:padding="1sp"
                    android:src="@drawable/board_comment" />

                <TextView
                    android:id="@+id/comment_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="5"
                    android:textSize="14sp"
                    android:textColor="#666666" />

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

</LinearLayout>
